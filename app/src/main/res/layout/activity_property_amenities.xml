<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.HomeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="@string/indoor_amenities"
        android:textColor="@color/screen_title"
        android:textSize="18dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_indoor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/margin_bottom"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="@string/outdoor_features"
        android:textColor="@color/screen_title"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_outdoor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/margin_bottom"
        android:layout_marginBottom="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="@string/property_facing"
        android:textColor="@color/screen_title"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_propertyFacing"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/margin_bottom"
        android:layout_marginBottom="5dp" />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="@string/property_sarrounding"
            android:textColor="@color/screen_title"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/ed_surr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/bg_color"
            android:hint="@string/sarrounding_hint"
            android:textSize="14dp"
            android:padding="10dp" />
        <EditText
            android:id="@+id/ed_surr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/bg_color"
            android:hint="@string/sarrounding_hint"
            android:textSize="14dp"
            android:padding="10dp" />
        <EditText
            android:id="@+id/ed_surr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/bg_color"
            android:hint="@string/sarrounding_hint"
            android:textSize="14dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="@string/property_pricing"
            android:textColor="@color/screen_title"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/ed_price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/bg_color"
            android:hint="@string/sarrounding_hint"
            android:textSize="14dp"
            android:padding="10dp" />
        <EditText
            android:id="@+id/ed_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/bg_color"
            android:hint="@string/sarrounding_hint"
            android:textSize="14dp"
            android:padding="10dp" />
        <EditText
            android:id="@+id/ed_price3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/bg_color"
            android:hint="@string/sarrounding_hint"
            android:textSize="14dp"
            android:padding="10dp" />
        <at.markushi.ui.CircleButton
            android:id="@+id/btn_next_account"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/back"
            android:rotation="180"
            android:tint="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="8dip" />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>